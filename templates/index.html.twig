{% extends 'base.html.twig' %}

{% block stylesheets %}
	<head>
		<meta name="viewport" content="width=device-width, initial-scale=1"/>
		<link rel="stylesheet" href="/assets/css/styles.css">
	</head>
{% endblock %}

{% block body %}
	<body>
		<div class="header">
			<h2>My To Do List</h2>
			<form method='POST' action="{{ path('app_to_do_list_create') }}">
				<input name='title' type="text" id="myInput" placeholder="Task title..."/>
				<button type="submit" class="addBtn">Add a task</button>
			</form>
		</div>

		<ul>
			{% for task in tasks %}

				<li class="{{task.status ? 'checked' : ''}}">
					<a href="{{path('app_to_do_list_switch', {'id': task.id}) }}">
						<span class="task-list-item">{{task.title}}
						</span>
					</a>
					<a onclick="return confirm('Are you sure to delete?')" href="{{path('app_to_do_list_delete', {'id': task.id }) }}">
						<span class="close">X</span>
					</a>
				</li>
			{% endfor %}
		</ul>
	</body>

{% endblock %}
